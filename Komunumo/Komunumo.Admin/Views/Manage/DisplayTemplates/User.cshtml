@model ApplicationUser

<div class="panel-block">
    <div class="column is-full">
        <div class="columns">
            <div class="column is-half">
                <article class="media">
                    <div class="media-left">
                        <figure class="image is-128x128">
                            <img class="is-rounded" src="https://bulma.io/images/placeholders/128x128.png" alt="Image">
                        </figure>
                    </div>
                    <div class="media-content">
                        <div class="content">
                            <p class="title">@Model.UserName</p>
                            <p class="subtitle">D0683497</p>
                        </div>
                        <nav class="level">
                            <div class="level-left">
                                <a class="level-item" aria-label="like">
                                    <span class="tag is-info is-rounded">學生</span>
                                </a>
                                <a class="level-item" aria-label="like">
                                    <span class="tag is-warning">黑客社</span>
                                </a>
                            </div>
                        </nav>
                    </div>
                </article>
            </div>
            <div class="column is-half">
                <nav class="level">
                    <div class="level-left"></div>
                    <div class="level-right">
                        <button class="button is-primary is-outlined modal-button" data-target="modal-@Model.Id">編輯</button>
                    </div>
                </nav>
                <nav class="level">
                    <div class="level-item has-text-centered">
                        <div>
                            <p class="heading">姓名</p>
                            <p class="title">王大明</p>
                        </div>
                    </div>
                    <div class="level-item has-text-centered">
                        <div>
                            <p class="heading">學院</p>
                            <p class="title">資訊電機學院</p>
                        </div>
                    </div>
                    <div class="level-item has-text-centered">
                        <div>
                            <p class="heading">系級</p>
                            <p class="title">資訊三丙</p>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    <div id="modal-@Model.Id" class="modal modal-fx-fadeInScale">
        <div class="modal-background"></div>
        <div class="modal-content modal-card">
            <form asp-controller="" asp-action="" method="post">
                <header class="modal-card-head">
                    <p class="modal-card-title">Modal title &#64; @@</p>
                    <button class="modal-button-close delete" aria-label="close"></button>
                </header>
                <section class="modal-card-body">
                    <div class="field">
                        <label class="label">Name</label>
                        <div class="control">
                            <input class="input" type="text" placeholder="Text input">
                        </div>
                    </div>
                    <div class="field">
                        <label class="label">Username</label>
                        <div class="control has-icons-left has-icons-right">
                            <input class="input is-success" type="text" placeholder="Text input" value="@Model.UserName">
                            <span class="icon is-small is-left">
                                <i class="fas fa-user"></i>
                            </span>
                            <span class="icon is-small is-right">
                                <i class="fas fa-check"></i>
                            </span>
                        </div>
                        <p class="help is-success">This username is available</p>
                    </div>
                    <div class="field">
                        <label class="label">Email</label>
                        <div class="control has-icons-left has-icons-right">
                            <input class="input is-danger" type="email" placeholder="Email input" value="hello">
                            <span class="icon is-small is-left">
                                <i class="fas fa-envelope"></i>
                            </span>
                            <span class="icon is-small is-right">
                                <i class="fas fa-exclamation-triangle"></i>
                            </span>
                        </div>
                        <p class="help is-danger">This email is invalid</p>
                    </div>
                    <div class="field">
                        <label class="label">Message</label>
                        <div class="control">
                            <textarea class="textarea" placeholder="Textarea"></textarea>
                        </div>
                    </div>
                    <div class="field">
                        <div class="control">
                            <label class="radio">
                                <input type="radio" name="question">
                                Yes
                            </label>
                            <label class="radio">
                                <input type="radio" name="question">
                                No
                            </label>
                        </div>
                    </div>
                </section>
                <footer class="modal-card-foot">
                    <button class="button is-success">Save changes</button>
                    <button class="button modal-button-close">Cancel</button>
                </footer>
            </form>
        </div>
    </div>
</div>
