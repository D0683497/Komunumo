@model ApplicationUser

@{
    ViewData["Title"] = "使用者詳情";
}

<div class="container">
    <div class="columns">
        <div class="column">
            <p class="title">@ViewData["Title"]</p>
        </div>
        <div class="column">
            <a class="button is-primary is-pulled-right" asp-controller="Manage" asp-action="UserEdit" asp-route-id="@Model.Id">編輯</a>
        </div>
    </div>
    <div class="box">
        <div class="columns">
            <div class="column is-half">
                <article class="media">
                    <div class="media-left">
                        <figure class="image is-128x128">
                            <img class="is-rounded" src="https://bulma.io/images/placeholders/128x128.png" alt="Image">
                        </figure>
                    </div>
                    <div class="media-content">
                        <div class="content">
                            <p class="title">@Model.UserName</p>
                            <p class="subtitle">D0683497</p>
                        </div>
                        <nav class="level">
                            <div class="level-left">
                                <a class="level-item" aria-label="like">
                                    <span class="tag is-info is-rounded">學生</span>
                                </a>
                                <a class="level-item" aria-label="like">
                                    <span class="tag is-warning">黑客社</span>
                                </a>
                            </div>
                        </nav>
                    </div>
                </article>
            </div>
            <div class="column is-half">
                <nav class="level">
                    <div class="level-item has-text-centered">
                        <div>
                            <p class="heading">姓名</p>
                            <p class="title">王大明</p>
                        </div>
                    </div>
                    <div class="level-item has-text-centered">
                        <div>
                            <p class="heading">學院</p>
                            <p class="title">資訊電機學院</p>
                        </div>
                    </div>
                    <div class="level-item has-text-centered">
                        <div>
                            <p class="heading">系級</p>
                            <p class="title">資訊三丙</p>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
        <hr />
        <nav class="level">
            <div class="level-item has-text-centered">
                <div>
                    <p class="heading">Email</p>
                    <p class="title">@Model.Email</p>
                </div>
            </div>
            <div class="level-item has-text-centered">
                <div>
                    <p class="heading">認證</p>
                    <p class="title">@Model.EmailConfirmed</p>
                </div>
            </div>
        </nav>
        <nav class="level">
            <div class="level-item has-text-centered">
                <div>
                    <p class="heading">Phone</p>
                    @if (@Model.PhoneNumber == null)
                    {
                        <span class="tag is-danger is-warning is-rounded">無資料</span>
                    }
                    else
                    {
                        <p class="title">@Model.PhoneNumber</p>
                    }
                </div>
            </div>
            <div class="level-item has-text-centered">
                <div>
                    <p class="heading">認證</p>
                    <p class="title">@Model.PhoneNumberConfirmed</p>
                </div>
            </div>
        </nav>
        <nav class="level">
            <div class="level-item has-text-centered">
                <div>
                    <p class="heading">AccessFailedCount</p>
                    <p class="title">@Model.AccessFailedCount</p>
                </div>
            </div>
            <div class="level-item has-text-centered">
                <div>
                    <p class="heading">LockoutEnabled</p>
                    <p class="title">@Model.LockoutEnabled</p>
                </div>
            </div>
            <div class="level-item has-text-centered">
                <div>
                    <p class="heading">LockoutEnd</p>
                    <p class="title">@Model.LockoutEnd</p>
                </div>
            </div>
        </nav>
    </div>
</div>