@model ProfileViewModel

@{
    ViewData["Title"] = "個人資料";
}

<div class="container">
    <p class="title">@ViewData["Title"]</p>
    <div class="level">
        <div class="column box">
            <form asp-controller="Account" asp-action="Profile" method="post">
                <div class="field">
                    <label class="label" asp-for="Username"></label>
                    <div class="control">
                        <input asp-for="Username" class="input" disabled />
                    </div>
                    <span asp-validation-for="Username" class="help is-danger"></span>
                </div>
                <div class="field">
                    <label class="label" asp-for="Email"></label>
                    <div class="control">
                        <input asp-for="Email" class="input" />
                    </div>
                    <span asp-validation-for="Email" class="help is-danger"></span>
                </div>
                <div class="field">
                    <label class="label" asp-for="PhoneNumber"></label>
                    <div class="control">
                        <input asp-for="PhoneNumber" class="input" />
                    </div>
                    <span asp-validation-for="PhoneNumber" class="help is-danger"></span>
                </div>
                <div class="field">
                    <div class="control">
                        <button type="submit" class="button is-primary">儲存</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
