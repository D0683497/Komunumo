@{
    ViewData["Title"] = "個人中心";
}

<h2>@ViewData["Title"]</h2>
<hr />
<div class="card-deck">
    <div class="card text-center">
        <a asp-controller="Account" asp-action="Profile" class="card-body stretched-link text-decoration-none">
            <h2><i class="fas fa-user-circle fa-3x"></i></h2>
            <h4 class="card-title">個人資料</h4>
        </a>
    </div>
    <div class="card text-center">
        <a asp-controller="Account" asp-action="ChangePassword" class="card-body stretched-link text-decoration-none">
            <h2><i class="fas fa-lock fa-3x"></i></h2>
            <h4 class="card-title">修改密碼</h4>
        </a>
    </div>
</div>