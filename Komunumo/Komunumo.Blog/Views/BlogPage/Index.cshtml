<div class="col-xl-8 py-5 px-md-5">
    <div class="row pt-md-4">
        @foreach (var item in Model)
        {
            <div class="col-md-12">
                <div class="blog-entry ftco-animate d-md-flex">
                    <a  asp-action="Details" asp-route-id="@item.Article_ID" class="img img-2"
                       style="background-image: url(images/image_1.jpg);"></a>
                    <div class="text text-2 pl-md-4">
                        <h3 class="mb-2">
                            <a href="single.html">@Html.DisplayFor(modelItem => item.Title)</a>
                        </h3>
                        <div class="meta-wrap">
                            <p class="meta">
                                <span><i class="icon-calendar mr-2"></i>@Html.DisplayFor(modelItem => item.PostDate)</span>
                                <span><a href="single.html"><i class="icon-folder-o mr-2"></i>Travel</a></span>
                                <span><i class="icon-comment2 mr-2"></i>5 Comment</span>
                            </p>
                        </div>
                        <p class="mb-4">
                            @Html.DisplayFor(modelItem => item.Context)
                        </p>
                        <p>
                            <a href="#" class="btn-custom my-2 my-sm-0">
                                Read More <span class="ion-ios-arrow-forward"></span>
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
